<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@color/background" >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivWeatherIcon"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/clear" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/tvLocation"
        android:layout_above="@+id/tvDescription"
        android:layout_toRightOf="@+id/ivWeatherIcon"
        android:layout_toEndOf="@+id/ivWeatherIcon"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/tvDescription"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivWeatherIcon"
        android:layout_toEndOf="@+id/ivWeatherIcon" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temp"
        android:id="@+id/tvTemp"
        android:layout_alignTop="@+id/tvDescription"
        android:layout_toRightOf="@+id/tvLocation"
        android:layout_toEndOf="@+id/tvLocation" />
</RelativeLayout><!-- From: file:/D:/My%20Projects/WeatherApps/app/src/main/res/layout/current_weather_list_item.xml -->